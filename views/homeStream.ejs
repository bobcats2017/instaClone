<html>

<head>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/comments.css">
    <link rel="stylesheet" type="text/css" href="/slick/slick.css">
    <link rel="stylesheet" type="text/css" href="/slick/slick-theme.css">
    <link href="https://fonts.googleapis.com/css?family=Lobster|Megrim|Playfair+Display|Exo" rel="stylesheet">
    <meta charset="utf-8">
    <title>Login_App
    </title>
</head>

<body>
    <div class="jumbotron">
        <div class="container">
            <div class="font-effect-neon">DWE Designs</div>
        </div>
    </div>

    <div class="container">
        <div class="header clearfix">
            <nav>
                <!-- NAV BAR  -->
                <ul class="nav nav-pills float-right">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
                        <!-- might need to fix routing -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Sign In</a>
                        <!--  need to fix routing -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Sign Out</a>
                        <!--  need to fix routing -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/homeStream">Home Stream</a>
                        <!--  need to fix routing -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Upload Image</a>
                        <!--  need to fix routing -->
                    </li>
                </ul>
            </nav>
        </div>

          <div class="forSlick">
        <% articles.forEach(function(post){ %>
                <div class="card" style="width: 20rem;">
                    <img class="card-img-top" src="/file_uploader/image-1504746733795.jpg" alt="Card image cap">
                    <div class="card-block">
                        <h4 class="card-title"><%= post.username %></h4>
                        <p class="card-text"><span class="username">Description:</span>
                            <%= post.description %>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <div class="edit-link">
                            <a href="/editPost/:<%= post.post_id %>">EDIT</a>
                        </div>
                    </ul>
                </div>
                <form method="POST" action="/addComment">
                    <div class="form-group">
                        <label>Add Comment</label>
                        <textarea class="form-control" placeholder="description" name="description"> </textarea>
                    </div>
                    <input type="hidden" name="user_id" value="1">
                    <button type="submit" class="btn btn-default">Submit</button>
                  </form>
            </div>
            <% }) %>
            </div>



    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="slick/slick.min.js"></script>
    <script>
            $('.forSlick').slick({
                infinite: true,
                slidesToShow: 3,
                slidesToScroll: 3
            });
        });
    </script>
</body>
