<html>
<head>
    <link rel="stylesheets" href="public/css/index.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
    <meta charset="utf-8">
    <title>Login_App
    </title>
</head>
<div class="container">
    <div class="header clearfix">
        <nav>
            <!-- NAV BAR  -->
            <ul class="nav nav-pills float-right">
                <li class="nav-item">
                    <a class="nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
                    <!-- might need to fix routing -->
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Sign In</a>
                    <!--  need to fix routing -->
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Sign Out</a>
                    <!--  need to fix routing -->
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/homeStream">Home Stream</a>
                    <!--  need to fix routing -->
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Upload Image</a>
                    <!--  need to fix routing -->
                </li>
            </ul>
        </nav>
    </div>

    <div class="container">
        <% articles.forEach(function(post){ %>
            <h1><%= post.username %></h1>
            <h1><%= post.hashtag %></h1>
            <p><%= post.description %></p>
            <img src="<%= post.images %>" alt="<%= post.title %>" >
            <form method="POST" action="/addComment">
                <div class="form-group">
                    <label>Add Comment</label>
                    <textarea class="form-control" placeholder="description" name="description"> </textarea>
                </div>
                <input type="hidden" name="user_id" value="1">
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
            <a href="/editPost/:<%= post.post_id %>">EDIT</a>
        <% }) %>
    </div>

<section class="body-container">
    <div class="card">
        <div class="card-header">
    </div>
        <div class="profile-info">
    </div>
        <div class="profile-name"><h4><%= post.username %></h4></div>
    </div>

    <div class="content">  
    <div><img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/4273/jeremiah-wilson-1.jpg" alt></div>
    </div>

    <div class="card-footer"><div class="description">
    <div class="profile-name">  
        <%= post.username %>
    </div>
    <p><span class="username">Description</span><%= post.description %></p>
        
  <div class="comments">
    <p><span class="username">Comments:</span>Comments</p>
    <p> <span class="username">HashTag:</span><%= post.hashtag %></p>
  </div>
  
   <div class="form">
  
  <div class="inputWithIcon">
  <input type="text" placeholder="add a comment..limit 150 characters"/>
  </div>
    
  <div class="inputWithIcon">
  <input type="text" placeholder="hash it...."/>
  </div>

  <div class="user-description">
  <input type="text" placeholder="placeholder for description"/>   
  </div>

  <div class="btn-post">
  <form id="btn-post-comments">
   <button id="btn-post-comment">POST</button>
   </form>
  

</body>
</html>